@page
@model MyApp.Namespace.ListModel

@{
    ViewData["Title"] = "Restaurants List";

    if (!string.IsNullOrEmpty(Model.Message))
    {
        <h1>@Model.Message</h1>
    }
}

<h2>Restaurants</h2>
<form method="get">
    <div class="form-group">
        <div class="input-group">
            <input type="search" class="form-control" asp-for="SrchRest">
            <button class="btn btn-sm btn-primary" type="submit">
                <i class="fas fa-search">&nbsp;Find</i>
            </button>
        </div>
    </div>
</form>
<br />
<br />

<div class="row float-right">
    <div class="col-12">
        <a asp-page="./Edit" asp-route-Id="-1" class="btn btn-secondary">Add New</a>
    </div>
</div>
<table class="table table-striped table-success">
    <thead scope="row">
        <!-- <th scope="col-1">ID</th> -->
        <th scope="col-3">Name</th>
        <th scope="col-5">Location</th>
        <th scope="col-2">Cuisine</th>
        <th scope="col-1"></th>
    </thead>
    @foreach (var r in Model.Restaurants)
    {
        <tr scope="row">
            <!-- <td scope="col-1">@r.Id</td> -->
            <td scope="col-3">
               <a asp-page="./Detail" asp-route-Id="@r.Id">@r.Name</a>
            </td>
            <td scope="col-5">@r.Location</td>
            <td scope="col-2">@r.Cuisine</td>
            <td scope="col-1">
                <div class="btn-group btn-group-sm">
                    <a class="btn btn-sm btn-primary" asp-page="./Edit" asp-route-Id="@r.Id">Edit</a>
                    <a class="btn btn-sm btn-danger" asp-page="./Delete" asp-route-Id="@r.Id">Delete</a>
                </div>
            </td>
        </tr>
    }
</table>
